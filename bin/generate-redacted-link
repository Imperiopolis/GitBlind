#!/bin/zsh
set -e

# TODO: Don't hard code the url.

function encode {
  echo -n $1 | base64
}

if [ $# != 3 ]; then
  echo "Usage: generate-redacted-link [username] [firstname] [lastname]"
  exit 1
fi

user=$1
first=$2
last=$3

echo "http://github-redact.herokuapp.com/`encode $user`?redact=`encode "$user,$first $last,$first,$last"`"
